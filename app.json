    "scripts": {
      "postdeploy": "bin/console doctrine:migrations:migrate && bin/console doctrine:fixtures:load"
    },
    "addons": [
      {
        "plan": "heroku-postgresql"
      }
    ],
    "buildpacks": [
      {
        "url": "heroku/php"
      }
    ]
  }